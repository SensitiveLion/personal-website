<ul>
  <div id="wrapper">
    <div class="row">
      <div class="large-12 hide-for-small">
        <img src="http://i.imgur.com/xwzdcv4.jpg">
      </div>
    </div>
  </div>
</ul>

<div class="row" id="title">
  <div class="small-8 large-centered column" >
    <h1>Andy Passidomo<h1>
    <h3>for all your coding needs</h3>

  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-4 small-6 columns">
        <h4>Skills</h4><hr>
        <% if @profile.empty? %>
          No skills matched your search
        <% else %>
          <% @profile.skills.each do |skill| %>
            <div class="row">
              <div class="large-12 small-centered columns">
                <h5>skill</h5>
              </div>
            </div><hr>
          <% end %>
        <% end %>
      </div>
      <div class="large-4 small-6 columns">
        <img src="http://i.imgur.com/NvlWChv.gif">
      </div>
      <div class="large-4 small-12 columns">
        <h4>more options</h4><hr>
        <div class="panel hide-for-small">
          <h4 class="panel-text">search games</h4>
          <h5>
            <%= form_tag games_path, method: :get do %>
              <%= text_field_tag :query, params[:query], class: "search-box" %>
              <%= submit_tag "search", name: nil, class: "btn btn-search" %>
            <% end %>
          </h5>
        </div>
        <div class="panel">
          <h5><%= link_to "add a new game", new_game_path %></h5>
        </div>
        <div class="panel hide-for-small">
          <h5><%= link_to "check out other gamers", users_path %></h5>
        </div>
        <div class="panel">
          <h5><%= link_to("moar games", games_path) %></h5>
        </div>
      </div>
    </div>
  </div>
</div>
